<h1>Tickets search</h1>
<div class="row">
  <div class="col-sm-12 col-md-6">
    <%= form_tag(search_path, method:'get') do  %>
    <div class="form-group">
      <%= label_tag(:start_station_id, 'Depart from:')%>
      <%= collection_select(:search, :start_station_id, @stations, :id, :title, {}, {class: "form-control"}  )%>
    </div>
    <div class="form-group">
      <%= label_tag(:start_station_id, 'Arrive to:')%>
      <%= collection_select(:search, :end_station_id, @stations, :id, :title, {}, {class: "form-control"} )  %>
    </div>
      <%= submit_tag 'Search', class: "btn btn-primary"%>
    <% end %>
  </div>
</div>