<%= form_with(model: car, local: true) do |form| %>
   <%= render 'shared/errors', resource: car%>
  <div class="field">
    <%= form.label :number %>
    <%= form.text_field :number %>
  </div>
  
  <div class="field">
    <%= form.label :bottom_seats %>
    <%= form.text_field :bottom_seats %>
  </div>
  
  <div class="field">
    <%= form.label :top_seats %>
    <%= form.text_field :top_seats %>
  </div>
  
  <div class="field">
    <%= form.label "Train" %>
    <%= form.collection_select :train_id, Train.all, :id, :number %>
  </div>
  
  <div class="field">
    <%= form.radio_button(:is_econom, true, :checked => true)%> Econom
    <%= form.radio_button(:is_econom, false) %> Business
  </div>

  <div class="actions">
    <%= form.submit "#{@car.new_record? ? 'Save' : 'Edit'}"%>
  </div>
<% end %>
