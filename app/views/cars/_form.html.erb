<%= form_for([car.becomes(Car)]) do |form| %>
   <%= render 'shared/errors', resource: car%>


    <div class="field">
      <%= form.label :bottom_seats %>
      <%= form.text_field :bottom_seats %>
    </div>

    <div class="field">
      <%= form.label :top_seats %>
      <%= form.text_field :top_seats %>
    </div>

    <div class="field">
      <%= form.label :top_side_seats %>
      <%= form.text_field :top_side_seats %>
    </div>

    <div class="field">
      <%= form.label :bottom_side_seats %>
      <%= form.text_field :bottom_side_seats %>
    </div>

    <div class="field">
      <%= form.label :seated_seats %>
      <%= form.text_field :seated_seats %>
    </div>
  
    <div class="field">
      <%= form.label "Type:" %>
      <%= form.select :type, Car.unique_types, { prompted: 'Select car type' } %>
    </div>
    
    <%=hidden_field_tag('train_id', params[:train_id], id: 'train_id')%>

    <div class="actions">
      <%= form.submit "#{@car.new_record? ? 'Save' : 'Edit'}"%>
    </div>
<% end %>
