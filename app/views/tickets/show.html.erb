<p id="notice"><%= notice %></p>
<h1>Ticket # <%= @ticket.id %></h1>
<h2>Ticket bought by: <%= @ticket.user.full_name %></h2>
<h2>Route: <%= @ticket.train.route.name %></h2>

<p>Start station: <%= @ticket.start_station.title %></p>
<p>End station: <%= @ticket.end_station.title %></p>

<h2>Passenger Info</h2>
<p>First Name: <%= @ticket.first_name %></p>
<p>Last Name: <%= @ticket.last_name %></p>
<p>Passport: <%= @ticket.passport_series %> <%= @ticket.passport_number %></p>
<%= link_to 'Back', tickets_path %>
