<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @route.name %>
</p>

<%if @route.trains.empty? %>
  <p>There are no trains on this route</p>
<%else%>
  <ul>
    <%@route.trains.each do |train|%>
    <li><%= train.number %></li>
    <%end%>
  </ul>
<%end%>

<% if @route.railway_stations.empty? %>
<p>There are no stations on this route</p>
<% else %>
  <table>
    <thead>
      <th>Position</th>
      <th>Name</th>
      <th>Time arrival</th>
      <th>Time departure</th>
    </thead>
    <tbody>
      <% @route.railway_stations.each do |station|%>
        <tr>
          <td>
            <%= form_tag update_serial_number_railway_station_path(station), method: :patch do%>
              <%= number_field_tag :station_serial_number, station.position_in(@route) %>
              <%= hidden_field_tag :route_id, @route.id %>
              <%= submit_tag "Edit" %>   
            <% end %>
          </td>
          <td><%=station.title%></td>
          <td>
            <%=form_tag update_time_arrival_railway_station_path(station), method: :patch do%>
              <%= time_field_tag :arrival_time %>
              <%= hidden_field_tag :route_id, @route.id %>
              <%= submit_tag "Edit" %>
            <% end %>
         </td>
          <td>  
            <%=form_tag update_time_departure_railway_station_path(station), method: :patch do%>
              <%= time_field_tag :departure_time %>
              <%= hidden_field_tag :route_id, @route.id %>
              <%= submit_tag "Edit" %>
            <% end %>
          </td>
        </tr>
      <%end%>
    </tbody>
  </table>
<%end%>

<%= link_to 'Edit', edit_route_path(@route) %> |
<%= link_to 'Back', routes_path %>