<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @route.name %>
</p>

<%if @route.trains.empty? %>
  <p>There are no trains on this route</p>
<%else%>
  <ul>
    <%@route.trains.each do |train|%>
    <li><%= train.number %></li>
    <%end%>
  </ul>
<%end%>

<%= link_to 'Edit', edit_route_path(@route) %> |
<%= link_to 'Back', routes_path %>