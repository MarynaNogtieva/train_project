
<%= form_with(model: train, local: true) do |form| %>
   <%= render 'shared/errors', resource: train%>

  <div class="field">
    <%= form.label :number %>
    <%= form.text_field :number, id: :train_number %>
  </div>

  <div class="field">
    <%= form.label "Current Station" %>
    <%= form.collection_select :current_station_id, RailwayStation.all, :id, :title %>
  </div>

  <div class="actions">
    <%= form.submit "#{@train.new_record? ? 'Save' : 'Edit'}"%>
  </div>
<% end %>