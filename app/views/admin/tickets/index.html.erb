<h1><%= t('.title') %></h1>

<%if @tickets.any? %>
  <table>
    <thead>
      <tr>
        <th><%= t('.passenger_name') %></th>
        <th><%= t('.ticket_number') %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @tickets.each do |ticket| %>
        <tr>
          <td><%= ticket.user.full_name %></td>
          <td><%= ticket.id %></td>
          <td><%= link_to t('common.show'), admin_ticket_path(ticket) %></td>
          <td><%= link_to t('common.edit'), edit_admin_ticket_path(ticket) %></td>
          <td><%= link_to t('common.destroy'), [:admin, ticket], method: :delete, data: { confirm: t('common.confirm') } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
<%else%>
  <p>
    You haven't purchased any tickets yet.
  </p>
<% end %>
<%= link_to link_to t('.new_ticket'), new_admin_ticket_path %>
