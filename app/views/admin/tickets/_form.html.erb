<%= form_with(model: [:admin, ticket], local: true) do |form| %>
<%= render 'shared/errors', resource: ticket%>

  <div class="actions">
    <%= form.label :user%>
    <%= form.collection_select :user_id, User.all, :id, :full_name %>
    <%= form.label :first_name%>
    <%= form.text_field :first_name %>
    <%= form.label :last_name %>
    <%= form.text_field :last_name %>
    <%= form.label :passport_series%>
    <%= form.text_field :passport_series %>
    <%= form.label :passport_number%>
    <%= form.text_field :passport_number %>
    
    
    <%= hidden_field :ticket, :train_id, value: params[:train_id] %>
    <%= hidden_field :ticket, :start_station_id, value: params[:start_station_id] %>
    <%= hidden_field :ticket, :end_station_id, value: params[:end_station_id] %>

    <div class="field">
      <%= form.label :train %>
      <%= form.collection_select :train_id, Train.all, :id, :number %>
    </div>

    <div class="field">
      <%= form.label :start_station %>
      <%= form.collection_select :start_station_id, RailwayStation.all, :id, :title %>
    </div>

    <div class="field">
      <%= form.label :end_station %>
      <%= form.collection_select :end_station_id, RailwayStation.all, :id, :title %>
    </div>
  
    <%= form.submit t(".submit", action: ticket.new_record? ? "создать" : "редактировать")%>
  </div>
<% end %>
