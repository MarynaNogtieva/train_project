<tr>

  
  <td><%= train.number %></td>
  <td> <%= "Econom cars: #{train.cars.economy.count},
    top seats: #{train.seats(car_type: 'EconomCar', seats_type: 'top_seats')}, 
    bottom seats: #{train.seats(car_type: 'EconomCar', seats_type: 'bottom_seats')},
    top side seats: #{train.seats(car_type: 'EconomCar', seats_type: 'top_side_seats')},
    bottom side seats: #{train.seats(car_type: 'EconomCar', seats_type: 'bottom_side_seats')}"
     %>  
  </td>  
  <td> <%= "Business cars: #{train.cars.business.count},
    top seats: #{train.seats(car_type: 'BusinessCar', seats_type: 'top_seats')}, 
    bottom seats: #{train.seats(car_type: 'BusinessCar', seats_type: 'bottom_seats')}"
     %>  
  </td>  
  <td> <%= "Sv cars: #{train.cars.sv.count},
    bottom seats: #{train.seats(car_type: 'SvCar', seats_type: 'bottom_seats')}"
     %>  
  </td> 
  <td> <%= "Seated cars: #{train.cars.seated.count},
    seated seats: #{train.seats(car_type: 'SeatedCar', seats_type: 'seated_seats')}"
     %>  
  </td> 

  <td><%= link_to 'Show', admin_train_path(train) %></td>
  <td><%= link_to 'Edit', edit_admin_train_path(train) %></td>
  <td><%= link_to 'Destroy', [:admin, train], method: :delete, data: { confirm: 'Are you sure?' } %></td>
</tr>